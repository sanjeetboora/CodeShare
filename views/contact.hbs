 <h1 class="text-center">Contact Us</h1>
 <form class="col-md-6 offset-md-3" method="post">
  {{#each errorMessages}}
    <div class="alert alert-danger">
        {{this.msg}}
    </div>
  {{/each}}
   <div class="form-group">
    <label>Name</label>
    <input name="name" value="{{name}}" type="text" class="form-control" placeholder="Name">
  </div>
  <div class="form-group">
    <label>Email address</label>
    <input name="email" value="{{email}}" type="email" class="form-control" placeholder="Email">
  </div>
  <div class="form-group">
    <label>Message</label>
    <textarea name="message" class="form-control" rows="3">{{message}}</textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>